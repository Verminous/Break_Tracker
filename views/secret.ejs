<!-- ////////////////// - TO DO LIST - ////////////////// -->

<div class="todo-container">

    <h2>Breaks</h2>

        <form action="/" method="POST" class="todo-header"><input type="text" name="content">
            <button type="submit"><span class="fas fa-plus"></span></button>
        </form>
        <ul class="todo-list">
            <% todoTasks.forEach(details=> { %><li class="todo-list-item">
                    <div class="todo-list-item-name">
                        <%= name %> - <%= details.content %>
                    </div><a href="/edit/<%= details._id %>" class="edit"><span class="fas fa-edit"></span></a><a
                        href="/remove/<%= details._id %>" class="remove"><span class="fas fa-times"></span></a>
                </li>
                <% }) %>
        </ul>

</div>