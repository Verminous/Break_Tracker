<!--//////// - PREVENT PLACEHOLDER ANIM WHEN TEXT - /////////-->

<script>
  'use strict';

  document.addEventListener('DOMContentLoaded', () => {
    const handleInput = input => {
      if (input.value) {
        input.parentElement.classList.add('has-text');
      } else {
        input.parentElement.classList.remove('has-text');
      }
    };
 
    const inputFields = document.querySelectorAll('.inputfield, .search-bar');
    inputFields.forEach(input => {
      input.addEventListener('input', event => handleInput(event.target));
      handleInput(input);
    });
  });

</script>