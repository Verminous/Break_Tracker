<!-- ////////////////// - TO DO LIST - ////////////////// -->

<div class="break-container">

  <ul class="break-list">
    <div id="foo" class="main">
      <% let index=0; %>
        <% breakTracker.forEach(details=> { %>
          <% convertToLocalTime=()=> {
            let clientDate = new Date();
            let timezoneOffset = clientDate.getTimezoneOffset();
            let date = new Date(details.startTime);
            let localDate = new Date(date.getTime() + timezoneOffset);
            let timeString = localDate.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', hour12: false
            });
            return timeString;
            }
            %>
            <% convertToLocalTime_2=()=> {
              let clientDate = new Date();
              let timezoneOffset = clientDate.getTimezoneOffset();
              let date = new Date(details.breakStartTimeStamp);
              let localDate = new Date(date.getTime() + timezoneOffset);
              let timeString = localDate.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', hour12: false
              });
              return timeString;
              }
              %>
              <li class="break-list-item-admin">
                <div class="break-list-item-name-admin">
                  <div class="spcitems">
                    <agent>
                      <%= details.user %>
                    </agent><br>
                    <infotitle>
                      Submitted at:
                    </infotitle>
                    <info>
                      <%= convertToLocalTime(details.startTime) %>
                    </info><br>
                    <infotitle>
                      Duration set:
                    </infotitle>
                    <info>
                      <%= details.duration %> mins
                    </info><br>
                    <infotitle>
                      Started at:
                    </infotitle>
                    <info>
                      <%= convertToLocalTime_2(details.breakStartTimeStamp) %>
                    </info><br>
                    <infotitle>
                      Time left:
                    </infotitle>
                    <info>
                      <span class="numerical-timer-admin <%= `timer-${details._id}` %>" style="display: none;">
                        <span class="loader">
                          <filer>.</filer>
                        </span>
                      </span>
                    </info>
                    <% if (!details.hasStarted) { %>
                      <nonstart>not started</nonstart>
                      <% } %>
                  </div>
                </div>

                <a href="/remove/<%= details._id %>" class="remove-admin" style="display: block;">
                  <span class="material-symbols-outlined">
                    close
                  </span>
                </a>

              </li>

              <script>
                myFingTimer(`<%= details._id %>`, <%= details.hasStarted %>);

                function myFingTimer(id, shouldStart) {
                  console.log('myFingTimer called with breakId:', id);
                  let duration = parseInt('<%= details.duration %>', 10) * 60;
                  let presentTime = new Date().getTime() / 1000;
                  let breakStartTimeStamp = (new Date('<%= details.breakStartTimeStamp %>').getTime() / 1000) || presentTime;
                  let timeCalc = (duration) - (presentTime - breakStartTimeStamp) + 62;
                  id = id.replace(/&#34;/g, '-');
                  let display = document.querySelector(`.timer-${id}`);
                  display.classList.remove('loading');
                  console.log('id:', id);
                  console.log('display:', display);

                  if (shouldStart) {
                    // Show the timer if the break has started
                    display.style.display = 'inline';
                  } else {
                    return;
                  }

                  startTimer(timeCalc, display, id);
                }
              </script>

              <% }) %>
    </div>
  </ul>
</div>

